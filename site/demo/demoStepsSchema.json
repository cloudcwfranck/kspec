{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "kspec Demo Steps Schema",
  "description": "Schema for validating kspec interactive demo step data",
  "type": "object",
  "required": ["version", "tabs"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version in semver format"
    },
    "tabs": {
      "type": "array",
      "minItems": 1,
      "description": "Array of demo tabs, each representing a kspec capability",
      "items": {
        "type": "object",
        "required": ["id", "label", "description", "steps", "docsLink"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9-]*$",
            "description": "Unique identifier for the tab (kebab-case)"
          },
          "label": {
            "type": "string",
            "minLength": 1,
            "description": "Display label for the tab"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "Brief description of the capability"
          },
          "steps": {
            "type": "array",
            "minItems": 1,
            "description": "Array of command/output steps to display",
            "items": {
              "type": "object",
              "required": ["command", "output"],
              "properties": {
                "command": {
                  "type": "string",
                  "minLength": 1,
                  "description": "The command to display (e.g., 'kspec scan')"
                },
                "output": {
                  "type": "string",
                  "description": "The terminal output to display (can be empty)"
                }
              }
            }
          },
          "docsLink": {
            "type": "string",
            "pattern": "^/docs/.*$",
            "description": "Link to relevant documentation page"
          }
        }
      }
    }
  }
}
